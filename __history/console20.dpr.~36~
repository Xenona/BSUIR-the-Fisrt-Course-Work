                end;
              until (searchChoice >= 1) and (searchChoice <= 10);




              writeln('IN DEVELOPMENT');
            end;
            4:
            begin
              clearConsole();
              writeln('IN DEVELOPMENT');
            end;
            5:
            begin
              clearConsole();
               writeln('IN DEVELOPMENT');
            end;
            6:
            begin
              clearConsole();
               writeln('IN DEVELOPMENT');
            end;
            7:
            begin
              clearConsole();
              writeln('IN DEVELOPMENT');
            end;
            8:
            begin
              clearConsole();
